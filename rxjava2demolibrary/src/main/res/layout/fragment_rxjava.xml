<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_abc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="基础使用" />

    <Button
        android:id="@+id/btn_just"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作符 just()"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_from_array"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作符 fromArray()"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_from_callable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作符 fromCallable()"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/btn_from_futuer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="操作符 fromFuture()"
        android:textAllCaps="false" />
</LinearLayout>
